<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <!-- ViewPager2 chiáº¿m toÃ n bá»™ trÃªn cÃ¹ng -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_fragmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fl_miniplay"/>
    <!-- ðŸ§  Khung chá»©a fragment má»Ÿ chá»“ng lÃªn, vÃ­ dá»¥ CategoryPlaylist, PlaySong,... -->
    <FrameLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_miniplay"
        android:elevation="10dp"
        android:visibility="gone" />

    <!-- Mini player -->
    <FrameLayout
        android:id="@+id/fl_miniplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_bar"/>
    <!-- FULL SCREEN OVERLAY -->
    <FrameLayout
        android:id="@+id/fl_fullplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="16dp"/>
    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        app:itemIconTint="@color/textcolor"
        app:itemTextColor="@color/textcolor"
        app:menu="@menu/botton_menu"/>
</RelativeLayout>
