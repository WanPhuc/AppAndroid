<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_btnlogin"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:layout_marginBottom="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

            <TextView
                android:id="@+id/tv_textbiggenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="genre"
                android:textSize="50dp"
                android:gravity="center"/>
        <TextView
            android:id="@+id/tv_textsmallgenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đây là danh sách các playlist thuộc thể loại này"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img_song"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/song"/>
        <ImageButton
            android:id="@+id/btn_addlibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_library"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/img_song"/>
        <ImageButton
            android:id="@+id/btn_shuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_shuffle_disabled"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btn_play"/>
        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_play"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_category_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>