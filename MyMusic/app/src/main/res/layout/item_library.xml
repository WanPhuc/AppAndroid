<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_itemplaylist_library"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_itemartist_library"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/artist"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/CircleImageView" />
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/ln_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/rl_img"
        android:layout_toLeftOf="@+id/btn_more_library">

        <TextView
            android:id="@+id/tv_nameitem_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Item"
            android:textColor="@color/white"
            android:textSize="25dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_pin_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent"
                android:rotation="50"
                android:src="@drawable/ic_pin"
                android:visibility="gone" />

        <TextView
            android:id="@+id/tv_second_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Name Item"
            android:textColor="#848484"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_more_library"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_more"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
