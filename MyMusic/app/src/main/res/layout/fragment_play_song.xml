<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:visibility="visible"
    tools:context=".fragments.PlaySongFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Phần header với nút back và menu -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/imgToMinimizePlayer"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:background="@color/primary"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_more"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- CardView chứa ảnh bài hát -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imgSong_ActiPlaySong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/song"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal" />
        </androidx.cardview.widget.CardView>

        <!-- Phần thông tin bài hát và các icon -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Tên bài hát - giới hạn chiều rộng để không đè lên icon -->
            <TextView
                android:id="@+id/tvNameSong_ActiPlaySong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên bài hát"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textcolor"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iconFavorite_ActiPlaySong"
                android:layout_marginRight="8dp"/>

            <!-- Tên nghệ sĩ - giới hạn chiều rộng tương tự -->
            <TextView
                android:id="@+id/tvNameArtist_ActiPlaySong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên nghệ sĩ"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textcolor"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iconFavorite_ActiPlaySong"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNameSong_ActiPlaySong"/>

            <!-- Các icon bên phải -->
            <ImageView
                android:id="@+id/iconFavorite_ActiPlaySong"
                android:layout_width="24dp"
                android:layout_height="24dp"

                app:layout_constraintRight_toLeftOf="@id/iconDownload_ActiPlaySong"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/iconDownload_ActiPlaySong"
                android:layout_width="24dp"
                android:layout_height="24dp"

                app:layout_constraintRight_toLeftOf="@id/iconShare_ActiPlaySong"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/iconShare_ActiPlaySong"
                android:layout_width="24dp"
                android:layout_height="24dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Thanh seek bar -->
        <SeekBar
            android:id="@+id/seekBarSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:thumbTint="@color/textcolor"
            android:foregroundTint="@color/white"
            />

        <!-- Thời gian bài hát -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duration_song"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="00:00"
                android:textColor="@color/textcolor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/totalDuration_song"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="4:30"
                android:textColor="@color/textcolor"
                android:textSize="15dp" />
        </LinearLayout>

        <!-- Các nút điều khiển phát nhạc -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/RandomSong_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:background="@color/primary"
                android:src="@drawable/ic_shuffle_disabled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/playPreSong_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="32dp"

                android:background="@color/primary"
                android:src="@drawable/ic_previous"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/playSong_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/playSong_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/playNextSong_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:background="@color/primary"
                android:scaleX="-1"
                android:src="@drawable/ic_previous"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/playSong_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.541" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài tiếp theo"
            android:textColor="@color/textcolor"
            android:textSize="20dp"/>
        <!-- Danh sách bài hát tiếp theo -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerplayingsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>